      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% if (experiences.length > 0) { %>
            <% experiences.forEach(experience => { %>
                <div class="col">
                    <div class="card" onclick="window.location='/companies/<%= company.name %>';">
                      <img src="..." class="card-img-top" alt="...">
                      <div class="card-body">
                        <h5 class="card-title"><%= experience.name %></h5>
                        <div class="row">
                            <div class="col-6"><%= experience.profile %></div>
                            <div class="col-6"><%= experience.year %></div>
                        </div>
                        
                      </div>
                    </div>
                  </div>
            <% }) %>
          <% } else { %>
            <p>There are no companies to display...</p>
          <% } %>
        
      </div>
      

